@model IEnumerable<PhotoManager.Models.Photo>

@{
    ViewBag.Title = "My Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My photos</h2>

<div id="container">
    <div class="row">
        <div class="col-md-4">
            @Html.Partial("_AdvancedPhotoSearch")
        </div>
        <div class="col-md-4 pull-right">
            @if (ViewBag.DisabledRegularUser)
            {
                @Html.ActionLink("Upload new photo", "Create", null, new { @class = "btn btn-primary", @disabled = "disabled" })
            }
            else
            {
                @Html.ActionLink("Upload new photo", "Create", null, new { @class = "btn btn-primary" })
            }
            @Html.ActionLink("Manage albums", "Index", "Albums", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<hr/>
<div id="photoList">
    @Html.Partial("_PhotosList")
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/pmscript")
}


